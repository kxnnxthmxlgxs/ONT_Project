@model PatientCareSubsystem.Data.Models.Domain.NurseSchedule

@{
    ViewData["Title"] = "Delete Nurse Schedule";
}

<h2>Delete Nurse Schedule</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Nurse Schedule</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nurse ID
        </dt>
        <dd class="col-sm-10">
            @Model.NurseId
        </dd>
        <dt class="col-sm-2">
            Shift
        </dt>
        <dd class="col-sm-10">
            @Model.ShiftType
        </dd>
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.Date.ToString("yyyy-MM-dd")
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="DisplayAll" class="btn btn-secondary">Back to List</a>
    </form>
</div>
