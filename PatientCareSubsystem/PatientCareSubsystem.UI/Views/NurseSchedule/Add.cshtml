@model PatientCareSubsystem.Data.Models.Domain.NurseSchedule

@{
    ViewData["Title"] = "Add Nurse Schedule";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Add">
    <div class="form-group">
        <label asp-for="NurseId" class="control-label"></label>
        <input asp-for="NurseId" class="form-control" />
        <span asp-validation-for="NurseId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShiftStart" class="control-label"></label>
        <input asp-for="ShiftStart" class="form-control" />
        <span asp-validation-for="ShiftStart" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShiftEnd" class="control-label"></label>
        <input asp-for="ShiftEnd" class="form-control" />
        <span asp-validation-for="ShiftEnd" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShiftType" class="control-label"></label>
        <input asp-for="ShiftType" class="form-control" />
        <span asp-validation-for="ShiftType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-primary" />
    </div>
</form>
