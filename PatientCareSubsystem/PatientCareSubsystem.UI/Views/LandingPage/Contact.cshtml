@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    /*footer section styles*/

        footer {
            background-color: #fff;
            color: #e0e0e0;
            padding-top: 100px;
            padding-left: 30px;
            padding-right: 30px;
            border-top: 1px solid #fff;
        }

        footer .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            max-width: 1200px;
            margin: 0 auto;
        }

        .footer-section {
            width: 100%;
            text-align: center;
            margin-bottom: 20px;
        }

        .footer-section h3 {
            font-size: 20px;
            margin-bottom: 15px;
            color: #1a1824;
            font-weight: 700;
        }

            .footer-section p, .footer-section a {
                color: #1a1824;
                text-decoration: none;
                line-height: 1.6;
            }

            .footer-section a {
                transition: color 0.3s ease;
            }

            .footer-section a:hover {
                color: #ffb700;
            }

            .footer-section ul {
                list-style: none;
                padding: 0;
                margin: 0;
            }

            .footer-section ul li {
                margin: 10px 0;
            }

        .social-media {
            margin-top: 20px;
        }

        .social-media a {
            height: 20px;
            width: 20px;
            font-size: 20px;
            color: #1a1824;
            margin: 0 15px;
            transition: color 0.3s ease;
        }

        

        .social-media a:hover {
            color: #ffb700;
        }

        .legal-info {
            font-size: 14px;
            margin-top: 20px;
        }

        .legal-info a {
            color: #1a1824;
            margin: 0 10px;
            transition: color 0.3s ease;
        }

        .legal-info a:hover {
            color: #ffb700;
        }


        .btn-primary {
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #34303e;
        }

        .contact-details p {
            transition: transform 0.3s ease;
        }

        .contact-details p:hover {
            transform: translateY(-5px);
        }


</style>
<div class="container mt-5">
    <!-- Map Section -->
    <section class="map">
        <h2 class="text-center">Find Us</h2>
        <div class="map-container my-4">
            <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3151.8354345099644!2d144.9559233153151!3d-37.817209979751704!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6ad642af0f11fd81%3A0xf577d4eaf8fbf63!2sHospital!5e0!3m2!1sen!2s!4v1609355973293!5m2!1sen!2s"
                width="100%" height="400" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false"
                tabindex="0"></iframe>
        </div>
    </section>

    <!-- Get in Touch Section -->
    <section class="get-in-touch text-center">
        <h2>Get in Touch</h2>
        <p class="lead my-4">We'd love to hear from you. Please fill in the form below to get in touch.</p>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post" action="/Contact/Submit">
                    <div class="form-group my-3">
                        <label for="firstName">First Name</label>
                        <input type="text" class="form-control" id="firstName" placeholder="Your First Name" required>
                    </div>
                    <div class="form-group my-3">
                        <label for="lastName">Last Name</label>
                        <input type="text" class="form-control" id="lastName" placeholder="Your Last Name" required>
                    </div>
                    <div class="form-group my-3">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" placeholder="Your Email" required>
                    </div>
                    <div class="form-group my-3">
                        <label for="message">Message</label>
                        <textarea class="form-control" id="message" rows="5" placeholder="Your Message" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg">Send Message</button>
                </form>
            </div>
        </div>
    </section>

    <br />
    <br />

    <!-- Emergency Contact & Details Section -->
    <section class="contact-details text-center">
        <h2>Emergency Contact & Details</h2>
        <div class="row my-4 justify-content-center">
            <div class="col-md-4">
                <p><strong>Emergency Contact:</strong></p>
                <p>(041) 123 4567</p>
            </div>
            <div class="col-md-4">
                <p><strong>Location:</strong></p>
                <p>NMU Summerstrand, Port Elizabeth, South Africa</p>
            </div>
            <div class="col-md-4">
                <p><strong>Email:</strong></p>
                <p>PBMedicalCentre@gmail.com</p>
            </div>
            <div class="col-md-4">
                <p><strong>Working Hours:</strong></p>
                <p>Mon - Fri: 9 AM - 10 PM</p>
                <p>Sat - Sun: Emergency Only</p>
            </div>
        </div>
    </section>

    <br />

    <footer>
        <div class="container">
            <div class="footer-section contact-info">
                <h3>Contact Us</h3>
                <p>NMU, Summerstrand</p>
                <p>Phone: (041) 235-6789</p>
                <p>Email: <a href="mailto:info@hospitalwebsite.com">PBMedicalCentre@gmail.com</a></p>
            </div>
            <div class="footer-section quick-links">
                <h3>Quick Links</h3>
                <ul>
                    <li><a href="/patient-services">Patient Services</a></li>
                    <li><a href="/appointments">Schedule an Appointment</a></li>
                    <li><a href="/emergency">Emergency Services</a></li>
                    <li><a href="/contact">Contact Us</a></li>
                </ul>
            </div>
            <div class="footer-section social-media">
                <h3>Follow Us</h3>
                <a href="https://facebook.com/hospital" target="_blank" aria-label="Facebook"><img src="/images/icons/facebook.png"></a>
                <a href="https://twitter.com/hospital" target="_blank" aria-label="Twitter"><img src="/images/icons/twitter.png"></i></a>
                <a href="https://instagram.com/hospital" target="_blank" aria-label="Instagram"><img src="/images/icons/instagram.png"></a>
            </div>
            <div class="footer-section legal-info">
                <p>&copy; 2024 Peaky Blinders Medical Centre. All rights reserved.</p>
                <a href="/privacy-policy">Privacy Policy</a> | <a href="/terms-of-service">Terms of Service</a>
            </div>
        </div>
    </footer>
</div>
