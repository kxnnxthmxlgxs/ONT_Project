@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <!-- Contact Us Section -->
    <section class="contact-us text-center">
        <h2>Contact Us</h2>
        <p class="lead my-4">We'd love to hear from you! Whether you have a question about our services or need assistance, our team is here to help.</p>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form>
                    <div class="form-group my-3">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="name" placeholder="Your Name">
                    </div>
                    <div class="form-group my-3">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" placeholder="Your Email">
                    </div>
                    <div class="form-group my-3">
                        <label for="message">Message</label>
                        <textarea class="form-control" id="message" rows="5" placeholder="Your Message"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg">Send Message</button>
                </form>
            </div>
        </div>
        <p class="my-4">Alternatively, you can reach us at:</p>
        <p><strong>Email:</strong> info@pbmedicaldashboard.com</p>
        <p><strong>Phone:</strong> +1 234 567 890</p>
    </section>
</div>
