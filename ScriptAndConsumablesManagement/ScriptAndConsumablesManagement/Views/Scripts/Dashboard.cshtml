@model ScriptAndConsumablesManagement.Data.Models.ViewModels.ScriptStatusCountViewModel
@{
    Layout = "~/Views/Shared/_LayoutScripts.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Script Management</title>

    <style>
        body {
            font-family: sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f2f2f2;
        }

        .container {
            display: flex;
            align-items: center;
            padding: 20px;
            height: 100vh;
            background-image: url('/snake_icon.png');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
        }

        .content {
            background-color: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            width: 90%;
            max-width: 1200px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .title {
            font-size: 24px;
            font-weight: bold;
        }

        .stats {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .stat {
            background-color: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            width: 30%;
            text-align: center;
        }

        .stat-title {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .stat-count {
            font-size: 36px;
        }

        #scriptChart {
            width: 400px !important;
            height: 400px !important;
            margin: 0 auto;
            display: block;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="content">
            <div class="header">
                <div class="title">Script Management</div>
            </div>
            <div class="stats">
                <div class="stat clickable-row" data-href="@Url.Action("DisplayScriptListN", "Scripts", new { Status = 'N' })">
                    <div class="stat-title">New Scripts</div>
                    <div class="stat-count">@Model.NewCount</div>
                </div>
                <div class="stat clickable-row" data-href="@Url.Action("DisplayScriptListP", "Scripts", new { Status = 'P' })">
                    <div class="stat-title">Processed Scripts</div>
                    <div class="stat-count">@Model.ProcessedCount</div>
                </div>
                <div class="stat clickable-row" data-href="@Url.Action("DisplayScriptListR", "Scripts", new { Status = 'R' })">
                    <div class="stat-title">Received scripts</div>
                    <div class="stat-count">@Model.ReceivedCount</div>
                </div>
            </div>
            <canvas id="scriptChart"></canvas>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</body>
<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
    <h6>Back</h6>
</a>
</html>

<script>
    var ctx = document.getElementById('scriptChart').getContext('2d');
    var chart = new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: ['New Scripts', 'Processed Scripts', 'Received Scripts'],
            datasets: [{
                label: 'Script Status',
                data: [@Model.NewCount, @Model.ProcessedCount, @Model.ReceivedCount],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            title: {
                display: true,
                text: 'Script Status',
                fontSize: 18
            },
            Legend: {
                labels: {
                    fontSize: 12
                }
            }
        }
    });
</script>