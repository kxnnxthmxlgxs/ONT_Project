<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjectPractice</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjectPractice.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid d-flex flex-columnx vh-100">
        <div class="row flex-grow-1">
            <div class="bg-dark col-auto col-md-2 d-flex flex-column">
                <ul class="nav nav-pills flex-column mt-4">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Schedule" asp-action="Dashboard">
                            <i class=""></i><span class="fs-4 d-none d-sm-inline">Dashboard</span>
                        </a>
                    </li>
                    <hr />
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="" asp-action="">
                            <i class=""></i><span class="fs-4 d-none d-sm-inline">View Patient Folder</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="PatientInstruction" asp-action="Add">
                            <i class=""></i><span class="fs-4 d-none d-sm-inline">Write Patient Instructions</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Script" asp-action="Add">
                            <i class=""></i><span class="fs-4 d-none d-sm-inline">Prescribe Medication</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Schedule" asp-action="Add">
                            <i class=""></i><span class="fs-4 d-none d-sm-inline">Schedule Visit</span>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="col">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>

        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ProjectPractice - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

